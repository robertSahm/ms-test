@media only screen and (max-width: 768px) { //768 and under

.headerWrapper {
  border: none !important;
}

.expanded ul.left {
  width: auto;
  text-align: center;
  float: right !important;
  margin-right: 2%;

  li {
    float: right;
    font-size: 1.35em;

    :hover {
      border: 1px solid black;
    }

    a {
      padding: 0 15% 0 15%;
      margin: 0;
      font-size: 1em;
    }
  } 
}

}///////////////// close 768 and under

